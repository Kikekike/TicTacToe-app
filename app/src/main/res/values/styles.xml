<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- titles style -->
    <style name="TextViewTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/tw_cen_mt_dtd</item>
    </style>

    <!-- edit text style -->
    <style name="MainEditText" >
        <item name="fontFamily">@font/tw_cen_mt_dtd</item>
        <item name="android:inputType">textPersonName</item>
        <item name="paddingStart">@dimen/margin_space_16dp</item>
        <item name="android:padding">@dimen/margin_space_12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:background">@drawable/background_input_layout</item>
        <item name="android:drawablePadding">@dimen/margin_space_16dp</item>
        <item name="android:maxLength">@integer/text_max_length_15</item>
    </style>

    <!-- buttons style -->
    <style name="MainButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/tw_cen_mt_dtd</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:background">@drawable/background_button</item>
    </style>


</resources>